{
  "snip1": {
    "prefix": "bash1",
    "body": [
      "bashbashbash"
    ]
  },
  "colors": {
    "prefix": "colors",
    "body": [
      "NC=$'\\033[0m'",
      "RED=$'\\033[0;31m'",
      "GREEN=$'\\033[0;32m'",
      "YELLOW=$'\\033[0;33m'",
      "BLUE=$'\\033[0;34m'",
      "PURPLE=$'\\033[0;35m'",
      "CYAN=$'\\033[0;36m'",
      "$1"
    ]
  },
  "filename": {
    "prefix": "filename",
    "body": [
      "FILENAME=\\$(echo \"\\$0\" | awk -F'/' '{print \"\\$NF\"}')",
      "PARENT_DIR=\\$(dirname \"\\$(readlink -f \"\\$0\")\")",
      "UP_ONE_LEVEL=\\$(echo \"\\$PARENT_DIR\" | awk -F'/' '{for (i=1; i<NF; i++) printf \"%s/\", \\$i; print \"\"}')"
    ]
  },
  "usage": {
    "prefix": "usage",
    "body": [
      "usage() {",
      "    cat <<EOF",
      "${1:description}",
      "Usage: \\$FILENAME [options] <${2:arg1}>",
      "Options:",
      "    -${3:arg1}      Arg description",
      "EOF",
      "    exit 0",
      "}"
    ]
  }
}
